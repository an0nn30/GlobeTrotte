{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack-env",
            "mocha",
            "node"
        ],
        "paths": {
            "@/*": [
                "src/cockpit/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/cockpit/**/*.vue",
        "src/cockpit/*.vue",
        "src/cockpit/**/*.ts",
        "src/cockpit/*.ts"
    ],
    "exclude": [
        "node_modules",
        "plz-out"
    ]
}
