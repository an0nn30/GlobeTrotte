{
    "name": "globetrotte",
    "productName": "GlobeTrotte",
    "version": "1.0.0",
    "author": "BinHong Lee <binhong@binhong.me>",
    "private": true,
    "license": "AGPL 3.0",
    "scripts": {
        "serve": "export NODE_ENV=dev && vue-cli-service serve src/cockpit/main.ts",
        "build": "export NODE_ENV=prod && vue-cli-service build src/cockpit/main.ts",
        "lint": "export NODE_ENV=test && vue-cli-service lint src/cockpit/**/*.ts",
        "test:unit": "export NODE_ENV=test && vue-cli-service test:unit src/cockpit/**/*.test.ts",
        "cover:unit": "export NODE_ENV=test && nyc pnpm run test:unit"
    },
    "dependencies": {
        "@babel/core": "7.4.5",
        "@types/node": "12.0.8",
        "@vue/babel-preset-app": "3.8.0",
        "axios": "0.19.0",
        "element-ui": "2.10.1",
        "vue": "2.6.10",
        "vue-class-component": "7.1.0",
        "vue-property-decorator": "8.2.1",
        "vue-router": "3.0.6",
        "vue-style-loader": "4.1.2",
        "webpack-env": "0.8.0",
        "wings-ts-util": "0.0.2"
    },
    "devDependencies": {
        "@types/chai": "4.1.7",
        "@types/mocha": "5.2.7",
        "@vue/cli-plugin-babel": "3.8.0",
        "@vue/cli-plugin-e2e-nightwatch": "3.8.0",
        "@vue/cli-plugin-typescript": "3.8.1",
        "@vue/cli-plugin-unit-mocha": "3.8.0",
        "@vue/cli-service": "3.8.4",
        "@vue/test-utils": "1.0.0-beta.29",
        "babel-loader": "8.0.6",
        "cache-loader": "3.0.1",
        "chai": "4.2.0",
        "core-js": "2.6.9",
        "css-loader": "2.1.1",
        "istanbul-instrumenter-loader": "3.0.1",
        "node-sass": "4.12.0",
        "nyc": "14.1.1",
        "pug": "2.0.3",
        "pug-plain-loader": "1.0.0",
        "sass-loader": "7.1.0",
        "thread-loader": "2.1.2",
        "ts-loader": "6.0.3",
        "tslib": "1.10.0",
        "typescript": "3.5.2",
        "url-loader": "1.1.2",
        "vue-loader": "15.7.0",
        "vue-template-compiler": "2.6.10",
        "webpack": "4.34.0"
    },
    "babel": {
        "presets": [
            "@vue/app"
        ]
    },
    "nyc": {
        "instrument": true,
        "sourceMaps": false,
        "all": true,
        "check-coverage": false,
        "per-file": true,
        "clean": true,
        "temp-dir": "./plz-out/.nyc_output",
        "include": [
            "src/cockpit/**/*.{ts,vue}"
        ],
        "exclude": [
            "**/*.{spec,test}.{js,ts}",
            "*.js"
        ],
        "reporter": [
            "lcov",
            "cobertura",
            "text",
            "text-summary"
        ],
        "report-dir": "./coverage",
        "extension": [
            ".ts",
            ".vue"
        ]
    }
}
