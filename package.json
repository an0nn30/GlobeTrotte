{
  "name": "globetrotte",
  "productName": "GlobeTrotte",
  "version": "1.0.0",
  "author": "BinHong Lee <binhong@binhong.me>",
  "private": true,
  "license": "AGPL 3.0",
  "scripts": {
    "genRouter": "tsc src/cockpit/scripts/genRouter.ts --outDir ./plz-out && node ./plz-out/genRouter.js",
    "genComponent": "tsc src/cockpit/scripts/genComponent.ts --outDir ./plz-out && node ./plz-out/genComponent.js",
    "serve": "pnpm run genRouter && vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "format": "vue-cli-service lint --fix",
    "test:unit": "vue-cli-service test:unit --colors src/cockpit/tests/**/*.spec.ts",
    "test:e2e": "forever start ./node_modules/@vue/cli-service/bin/vue-cli-service.js test:e2e && wait-on http://localhost:8080 && cypress run && forever stop ./node_modules/@vue/cli-service/bin/vue-cli-service.js",
    "cover": "nyc pnpm run test:unit"
  },
  "dependencies": {
    "element-ui": "2.13.2",
    "tslib": "1.10.0",
    "vue": "2.6.10",
    "vue-class-component": "7.2.3",
    "vue-property-decorator": "8.4.2",
    "vue-router": "3.2.0",
    "wings-ts-util": "0.0.6"
  },
  "devDependencies": {
    "@types/assert": "1.4.3",
    "@types/mocha": "5.2.7",
    "@types/node": "14.0.4",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "@vue/cli-plugin-e2e-cypress": "4.4.5",
    "@vue/cli-plugin-eslint": "4.4.0",
    "@vue/cli-plugin-router": "4.4.0",
    "@vue/cli-plugin-typescript": "4.4.0",
    "@vue/cli-plugin-unit-mocha": "4.4.0",
    "@vue/cli-service": "4.4.0",
    "@vue/eslint-config-prettier": "6.0.0",
    "@vue/eslint-config-typescript": "5.0.2",
    "@vue/test-utils": "1.0.3",
    "chai": "4.2.0",
    "eslint": "6.7.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-vue": "6.2.2",
    "forever": "3.0.0",
    "node-sass": "4.14.1",
    "nyc": "14.1.1",
    "prettier": "1.19.1",
    "pug": "3.0.0",
    "pug-plain-loader": "1.0.0",
    "sass-loader": "8.0.2",
    "typescript": "3.9.3",
    "vue-template-compiler": "2.6.10",
    "wait-on": "5.0.1"
  },
  "nyc": {
    "instrument": false,
    "sourceMaps": false,
    "all": true,
    "check-coverage": false,
    "per-file": true,
    "clean": true,
    "temp-dir": "./.nyc_output",
    "exclude": [
      "**/*.spec.ts",
      "**/*.js",
      "scripts/"
    ],
    "reporter": [
      "lcov",
      "cobertura",
      "text",
      "text-summary"
    ],
    "report-dir": "./coverage",
    "extension": [
      ".ts",
      ".vue"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 60,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "vueIndentScriptAndStyle": false,
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      },
      {
        "files": "*.vue",
        "options": {
          "parser": "vue"
        }
      }
    ]
  }
}
